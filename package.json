{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "url": "git+https://github.com/nuxt/create-nuxt-app.git",
    "type": "git"
  },
  "scripts": {
    "lint": "yarn lint:js && yarn lint:style",
