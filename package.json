    "ava": "^3.8.1",
    "eslint": "^6.8.0",
    "lerna": "^3.20.2",
    "stylelint": "^13.3.3",
    "stylelint-config-standard": "^20.0.0"
  },
  "name": "create-nuxt-app"
}
